@using web.Models
@model IEnumerable<UserOrder>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="span12">

        <div class="well well-small">
       


                <table class="table table-bordered table-condensed">
                    <thead>
                        <tr>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Siparis Numarası</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Sipariş Tarihi</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Toplam Tutar ($)</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Şipariş Durumu</font></font></th>
                            <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate</td>
                    <td>@item.Total</td>
                    <td>@item.OrderState</td>
                    <td>@Html.ActionLink("Sipariş Detay","Details",new {id=item.Id },new {@class="btn btn-primary" })</td>
                </tr>
                    }
                </table><br>

            
          

            

        </div>
    </div>
</div>



