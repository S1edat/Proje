@model web.Models.UserProfile
@{
    ViewBag.Title = "UserProfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">

                @*partial wiew kullanılırken ilk önce partial wiew kullanılır daha sonrasında controller kullanılır..*@
                @Html.Action("_CategoryList", "Categoryy")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>
        <br>

        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Profil Bilgileri </li>
        </ul>

        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("UserProfil", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

             

                <h3>Bilgi Güncelleme...</h3>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.id)
                <div class="control-group">
                    <label class="control-label" for="inputFname">Adınız... </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Soyadınız... </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adınız... </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label" for="inputFname">Email... </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

              
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Güncelle" class="exclusive shopBtn">
                        <a class="shopBtn" href="/Account/ChangePassword"> Sifre değiştir </a>
                    </div>
                </div>

            }
        </div>




    </div>
</div>
