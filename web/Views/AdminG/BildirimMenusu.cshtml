@using web.Entitys
@model IEnumerable<Order>


<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Model.Count()</font></font></span>
    </a>
    <ul class="dropdown-menu">
        <li class="header"><strong>Bildirimler</strong>(Bekleyenn Siparisler)</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 200px;">
                <ul class="menu" style="overflow: hidden; width: 100%; height: 200px;">

                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="/Order/Details/@item.Id">
                              <strong>@item.UserName</strong> <strong style="background-color:red">Sipariş Bekliyor!!</strong>
                            </a>
                        </li>

                    }


                </ul><div class="slimScrollBar" style="background: rgb(0, 0, 0); width: 3px; position: absolute; top: 0px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px;"></div><div class="slimScrollRail" style="width: 3px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; background: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px;"></div>
            </div>
        </li>
        <li class="footer">
            @if (Model.Count()>0)
            {
                <p><strong style="color:blue">Bildirimleriniz</strong></p>

            }
            else
            {
                <span style="color:chartreuse">Bildirim Yok</span>
            }
        </li>
    </ul>
</li>